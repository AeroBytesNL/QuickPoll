<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{ title || "Your default title" }}</title>
    @if ($slots.meta)
      {{{ await $slots.meta() }}}
    @endif
  </head>
  <body class="font-sans bg-gray-900 text-white flex flex-col min-h-screen">
    @if (session.has('success'))
      <div
        x-data="{ show: true }"
        x-show="show"
        x-init="setTimeout(() => show = false, 3000)"
        class="max-w-md mx-auto mt-6 bg-green-600 text-white px-4 py-3 rounded-lg shadow-lg text-center"
      >
        {{ session.get('success') }}
      </div>
    @endif

    @if (session.has('error'))
      <div
        x-data="{ show: true }"
        x-show="show"
        x-init="setTimeout(() => show = false, 3000)"
        class="max-w-md mx-auto mt-6 bg-red-600 text-white px-4 py-3 rounded-lg shadow-lg text-center"
      >
        {{ session.get('error') }}
      </div>
    @endif
    <!-- TODO: Place navbar in it's own file? -->
    <header class="flex items-center justify-between p-6 bg-gray-800 shadow-md">
      <a href="/">
        <h1 class="text-2xl font-bold text-blue-400">QuickPoll</h1>
      </a>
      <nav class="space-x-6">
        <a href="#" class="text-gray-300 hover:text-blue-400">Home</a>
        <a href="#" class="text-gray-300 hover:text-blue-400">Polls</a>
      </nav>
    </header>

    <div class="flex-grow">
      {{{ await $slots.main() }}}
    </div>

    <!-- TODO: Place footer in it's own file? -->
    <footer class="text-center text-sm text-gray-500 py-6 border-t border-gray-700">
      &copy; {{ new Date().getFullYear() }} QuickPoll. All rights reserved.
    </footer>

    @vite(['resources/css/app.css', 'resources/js/app.js'])
  </body>
</html>
